{
    "name": "micromus/kafka-bus-messages",
    "description": "Messages Builder for Kafka Bus",
    "keywords": [
        "Micromus",
        "kafka-bus",
        "kafka",
        "Apache Kafka",
        "message",
        "dto"
    ],
    "homepage": "https://github.com/micromus/kafka-bus-messages",
    "license": "MIT",
    "authors": [
        {
            "name": "Kirill Popkov",
            "email": "kirill.popkov.work@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-rdkafka": "*",
        "micromus/kafka-bus": "^1.0.0-RC1",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "friendsofphp/php-cs-fixer": "^3.64",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-arch": "^2.7",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.12",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Micromus\\KafkaBusMessages\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Micromus\\KafkaBusMessages\\Tests\\": "tests/",
            "Micromus\\KafkaBusMessages\\Workbench\\": "workbench/"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "analyse:baseline": "vendor/bin/phpstan analyse --generate-baseline",
        "format": "vendor/bin/php-cs-fixer fix --config .php-cs-fixer.php",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
